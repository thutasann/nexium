{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "./src/typescript",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/typescript"],
    "types": ["node"]
  },
  "include": ["src/typescript/**/*", "global.d.ts"],
  "exclude": ["node_modules", "lib"]
}
